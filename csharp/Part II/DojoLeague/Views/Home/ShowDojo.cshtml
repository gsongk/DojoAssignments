@model Dojo

<h3>Name: @Model.name</h3>
<h6>Dojo Location - @Model.location</h6>
<h6>Description: @Model.description</h6>


<div style="display: inline-block; width:500px">
    <table class="table table-striped table-sm  ml-5" >
        <h3 class="ml-5">Current Members</h3>
        <thead><tr><th>Ninja</th><th>Action</th></tr></thead>
        @foreach (var ninja in Model?.Ninjas)
        {
            if (ninja.dojo_id > 1)
            {
                <tr>
                    <td><a asp-action="ShowNinja" asp-route-id="@ninja.id">@ninja.name</a></td>
                    <td><a asp-action="#" asp-route-id="@ninja.id" asp-route-back="@Model.id">Banish!</a></td>
                </tr>

            }
  
        }
    </table>
</div>

<div style="display: inline-block; width: 500px; margin-left: 50px; margin-top:100px">
    <table class="table table-striped table-sm  ml-5">
        <h3 class="ml-5">Rogue Members</h3>
        <thead><tr><th>Ninja</th><th>Action</th></tr></thead>
        @foreach (var ninja in Model.Ninjas)
        {
            if (ninja.dojo_id == 1)

            {
                <tr>
                    <td><a asp-action="ShowNinja" asp-route-id="@ninja.id">@ninja.name</a></td>
                    <td><a asp-action="#" asp-route-id="@ninja.id" asp-route-back="@Model.id">Recruit!</a></td>
                </tr>

            }
        }
    </table>
</div>